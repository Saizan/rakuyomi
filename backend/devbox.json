{
  "packages": [
    "rustup@latest",
    "libiconv@latest",
    "openssl_1_1",
    "pkg-config",
    "cargo-cross@latest"
  ],
  "env": {
    "PROJECT_DIR": "$PWD"
  },
  "shell": {
    "init_hook": [
      ". conf/set-env.sh",
      "rustup default stable",
      "cargo fetch"
    ],
    "scripts": {
      "build-docs": "cargo doc",
      "start":      "cargo run",
      "run_test": [
        "cargo test -- --show-output"
      ]
    }
  },
  "nixpkgs": {
    "commit": "f80ac848e3d6f0c12c52758c0f25c10c97ca3b62"
  }
}
